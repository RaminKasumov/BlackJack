using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace BlackJack2022_3AHITN.Lib
{
    public class PlayerEventArgs
    {
        #region property
        /// <summary>
        /// Eigenschaft für den Spieler
        /// </summary>
        public IPlayer Player { get; }
        #endregion

        #region constructor
        /// <summary>
        /// Eigenschaft für den Spieler wird mit einem Wert befüllt
        /// </summary>
        /// <param name="player">Eigenschaft Player wird initialisiert</param>
        public PlayerEventArgs(IPlayer player)
        {
            Player = player;
        }
        #endregion
    }
}
